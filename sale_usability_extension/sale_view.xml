<openerp>
<data>

<record id="view_order_form" model="ir.ui.view">
    <field name="name">usability.sale.order.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <notebook position="inside">
            <page string="Delivery Orders" states="progress,waiting_date,manual,invoice_except,done">
                <field name="picking_ids" nolabel="1"/>
            </page>
            <page string="Invoices" states="progress,waiting_date,manual,invoice_except,done">
                <field name="invoice_ids" nolabel="1" context="{'form_view_ref': 'account.invoice_form'}"/>
            </page>
        </notebook>
    </field>
</record>

</data>
</openerp>
